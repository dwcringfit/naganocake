<div class="row">
    <h2>
        <%= link_to admin_client_index_path(clients) do %>
        <%= clients.family_name %>
        <%= clients.first_name %>
        <% end %>
        会員編集画面
    </h2>
</div>

<div class="row d-flex justify-content-center">
    <% if flash[:client_updated_error] %>
    <span class="text-danger"><%= flash[:client_updated_error] %></span>
    <% end %>
</div>

<div class="row mt-3 flex-column align-items-center">
    <%= form_for (@clients), url: admin_clients_data_path(@clients) do |f| %>

    <div class="form-group row">
        <%= f.label :会員ID, class: "col-sm-4" %>
        <%= f.label @client.id, class: "col-sm-8" %>
    </div>

    <div class="form-group row">
        <%= f.label :氏名, class: "col-sm-4" %>
        <%= f.text_field :family_name, class: "form-control col-sm-4" %>
        <%= f.text_field :first_name, class: "form-control col-sm-4" %>
    </div>

    <div class="form-group row">
        <%= f.label :フリガナ, class: "col-sm-4" %>
        <%= f.text_field :family_name_kana, class: "form-control col-sm-4" %>
        <%= f.text_field :first_name_kana, class: "form-control col-sm-4" %>
    </div>

    <div class="form-group row">
        <%= f.label :郵便番号, class: "col-sm-4" %>
        <%= f.text_field :post_number, class: "form-control col-sm-8" %>
    </div>

    <div class="form-group row">
        <%= f.label :住所, class: "col-sm-4" %>
        <%= f.text_field :address, class: "form-control col-sm-8" %>
    </div>

    <div class="form-group row">
        <%= f.label :電話番号, class: "col-sm-4" %>
        <%= f.text_field :tel, class: "form-control col-sm-8" %>
    </div>

    <div class="form-group row">
        <%= f.label :メールアドレス, class: "col-sm-4" %>
        <%= f.email_field :email, class: "form-control col-sm-8" %>
    </div>

    <div class="row">
        <%= f.label :会員ステータス, class: "ml-3" %>
        <div class="form-check ml-4">
            <%= f.radio_button :is_valid, :true %>
            <%= f.label :is_valid, "有効" %>
            <%= f.radio_button :is_valid, :false %>
            <%= f.label :is_valid, "退会済み" %>
        </div>
    </div>

    <div class="row">
        <%= f.submit "変更を保存する", class: "btn btn-primary mt-3 mx-auto" %>
    </div>
    <% end %>
</div>