<div class="row">
    <h2>会員一覧</h2>
</div>

<div class="row mt-3">
    <div class="offset-sm-1 col-sm-10">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>会員ID</th>
                    <th>氏名</th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                </tr>
            </thead>

            <tbody>
                <% @clients.each do |client| %>
                <tr id=<%= "client-info-#{client.id}" %>>
                    <td><%= client.id %></td>
                    <td><%= link_to admin_client_path(client) do %>
                        <%= client.first_name %>
                        <%= client.family_name %>
                        <% end %>
                    </td>
                    <td><%= client.email %></td>
                    <td><% if client.is_valid == true %>
                        有効会員
                        <% else %>
                        退会済み
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4 py-2 mt-5">
            <%= paginate @clients %>
        </div>
    </div>
</div>