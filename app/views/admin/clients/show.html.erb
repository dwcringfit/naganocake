<div class="row">
    <h2><%= current_client.get_full_name %>さんの会員詳細</h2>
    <div class="row mt-3">
        <div class="offset-sm-1 col-sm-7">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <td>顧客ID</td>
                        <td><%= @client.id %>
                            <% if @client.is_valid == true %>
                            <div class="p-3 mb-2 bg-info text-white">有効会員</div>
                            <% else %>
                            <div class="p-3 mb-2 bg-danger text-white">退会済み</div>
                            <% end %>
                        </td>
                    </tr>

                    <tr>ç
                        <td>氏名</td>
                        <td><%= @client.first_name %>
                            <%= @client.family_name %></td>
                    </tr>

                    <tr>
                        <td>フリガナ</td>
                        <td><%= @client.first_name_kana %>
                            <%= @client.family_name_kana %></td>
                    </tr>

                    <tr>
                        <td>郵便番号</td>
                        <td><%= @client.post_number %></td>
                    </tr>

                    <tr>
                        <td>住所</td>
                        <td><%= @client.address %></td>
                    </tr>

                    <tr>
                        <td>電話番号</td>
                        <td><%= @client.tel %></td>
                    </tr>

                    <tr>
                        <td>メールアドレス</td>
                        <td><%= @client.email %></td>
                    </tr>
                </tbody>
            </table>

            <%= link_to "編集する", edit_admin_client_path, class: "btn btn-primary" %>
            <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary mt-5" %>
        </div>
    </div>
</div>