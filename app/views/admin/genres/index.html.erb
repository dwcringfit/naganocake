<div class = "row">
	<div class = "col-xs-12">

     <h1>ジャンル追加・一覧</h1>
       <br>
       <%= form_for(@genre, url: admin_genres_path)  do |f| %>

       <%= render "layouts/error_messages", model: f.object %>

  	   <%= f.label :name, "ジャンル" %>
  	   <%= f.text_field :name %>

       <%= f.radio_button :is_valid, true, checked: true %>
       <%= f.label :is_valid, "有効", value: true %>

       <%= f.radio_button :is_valid, false %>
       <%= f.label :is_valid, "無効", value: false %>

       <%= f.submit "追加" %>
      <% end %>
        <br>
        <table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>

				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><%= genre.is_valid ? "有効" : "無効" %></td>
					<td><%= link_to "編集する",edit_admin_genre_path(genre), class: "btn-sm origin-btn edit_admin_genre_#{@genre.id}" %></td>
				</tr>
				<% end %>
         </table>
  </div>
</div>