<h1>ジャンル追加・一覧</h1>

  <%= form_for @genre do |f| %>

   <%= render "layouts/error_messages", resource: f.object %>

  	<%= f.label :name, "ジャンル" %>
  	<%= f.text_field :name %>

  	<%= f.radio_buttun :is_valid, true, checked: true %>
  	<%= f.label :is_valid, '有効', value: true %>

    <%= f.radio_buttun :is_valid, false %>
    <%= f.label :is_valid, '無効', value: false %>

   <%= f.submit "追加" %>
 <%= end %>

  <table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>

				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><%= genre.is_valid? "有効" : "無効" %></td>
					<td>><%= link_to "編集する",edit_admin_genre_path(@genre), class: "btn-sm btn-success edit_admin_genre_#{@genre.id}" %></td>
				</tr>
				<% end %>
   </table>