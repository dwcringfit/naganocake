
<h1>商品編集</h1>


<%= form_for(@item) do |f| %>

<!-- エラーメッセージ表示 必要？-->
<% if @item.errors.any? %>
	<h3><%= @item.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @item.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->

<div class="field">
	<%= f.label :image,"商品イメージ" %>
	<%= f.attachment_field :image, class: "image" %>
</div>

<div class="field">
	<%= f.label :name,"商品名" %>
	<%= f.text_field :name, class: "name" %>
</div>

<div class="field">
	<%= f.label :context, "商品説明" %>
	<%= f.text_area :context, class: "context" %>
</div>

<div class="form-group">
	<%= f.label :genre_id, "ジャンル" %>
	<%= f.collection_select :genre_id, Genre.all, :id, :list, {include_blank: "選択してください"},{class: 'form-control', required: true} %>
</div>

<div class="field">
	<%= f.label :price, "税込金額" %>
	<%= f.text_field :price, class: "price" %> 円
</div>


<div class="form-group">
	<%= f.label :is_sale, "販売ステータス" %>
	<%= f.select :is_sale, {"販売中": 0,"売り切れ": 1},{include_blank: "選択してください"},{class: 'form-control', required: true} %>
</div>


<div class="actions">
	<%= f.submit "新規登録", class: 'btn btn-primary btn-block' %>
</div>

<% end %>