<div class="row">
    <div class="col-xs-offset-1">
        <h3 class="order-text col-xs-4">注文履歴詳細</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-offset-1 col-xs-7">
        <table class="table">
            <tr>
                <th>購入者</th>
                <th><%= link_to @order.client(first_name, family_name), admin_client_path(@order.id) %></th>
            </tr>
            <tr>
                <th>配送先</th>
                <th><%= @order.post_number, @order.address, @order.client(first_name, family_name) %></th>
            </tr>
            <tr>
                <th>支払方法</th>
                <th><%= @order.payment_method %></th>
            </tr>
            <tr>
                <th>注文ステータス</th>
                <th><%= @order.status %></th>
            </tr>
        </table>
    </div>
</div>

<div class="row mt-40">
    <div class="col-xs-offset-1 col-xs-6">
        <table class="table">
            <thead>
                <tr class="active">
                    <th>商品名</th>
                    <th>単価（税込み）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>制作ステータス</th>
                </tr>
            </thead>
            <tbody>
                <%= @orders.each do |orders| %>
                    <tr>
                        <td><%= orders.item.name %></td> 
                        <td><%= orders.price %></td> 
                        <td><%= orders.item_count %></td>
                        <td><%= orders.price * item_count %></td>
                        <td><%= orders.production_status, class: ""%><%= link_to '更新', url: , method: :update, class: "btn btn-primary" %></td>
                    </tr>
                <%= %>
            </tbody>
        </table>
    </div>
    <div class="col-xs-offset-1 col-xs-3">
        <table class="table mt-3row">
            <tr>
                <th>商品合計</th>
                <th>円</th>
            </tr>
            <tr>
                <th>送料</th>
                <th></th>
            </tr>
            <tr>
                <th>請求金額合計</th>
                <th></th>
            </tr>
        </table>
    </div>
</div>