<div class="row">
    <div class="col-xs-offset-1">
        <h3 class="order-text col-xs-4">注文履歴詳細</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-offset-1 col-xs-7">
        <table class="table">
            <tr>
                <th>購入者</th>
                <th><%= link_to @order.client.get_full_name, admin_client_path(@order.id) %></th>
            </tr>
            <tr>
                <th>配送先</th>
                <th><%= @order.all_shipping_info %></th>
            </tr>
            <tr>
                <th>支払方法</th>
                <th><%= @order.payment_method %></th>
            </tr>
            <tr>
                <th>注文ステータス</th>
                <th>
                    <%= form_with(model: @order, local: true) do |f| %>
                        <div class="dropdown col-xs-4">
                            <%= f.label :status, '入金待ち', class: 'data-toggle="dropdown"' %>
                       </div>
                       <div class="dropdown-menue col-xs-5">
                            <%= f.select :status, {'入金待ち': 1, '入金確認': 2, '製作中': 3, '発送準備中': 4, '発送済み': 5}, { include_blank: '選択してください'}, { class: 'form-control', required: true } %>
                        </div>
                            <%= f.submit '更新', class: 'btn btn-primary' %>    
                        <% end %>   
                </th>
            </tr>
        </table>
    </div>
</div>

<div class="row mt-40">
    <div class="col-xs-offset-1 col-xs-6">
        <table class="table">
            <thead>
                <tr class="active">
                    <th>商品名</th>
                    <th>単価（税込み）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>制作ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @order_items.each do |order_item| %>
                    <tr>
                        <td><%= order_item.item.name %></td> 
                        <td><%= order_item.price  %></td>
                        <td><%= order_item.item_count %></td>
                        <td><%= order_item.subtotal %></td>
                        <td>
                            <%# <%= form_with(model: order_item_path, local: true) do |f| %> %>
                                <%# <div class="dropdown"> %>
                                    <%# <%= f.label :production_status, '入金待ち', class: 'data-toggle="dropdown"'%> %>
                                <%# </div> %>
                                <%# <div class="dropdown-menue"> %>
                                    <%# <%= f.select :production_status, {'着手不可': 1, '制作待ち': 2, '製作中': 3, '制作完了': 4}, { include_blank: '選択してください'}, { class: 'form-control', required: true } %> %>
                                <%# </div> %>
                                    <%# <%= f.submit '更新', class: 'btn btn-primary' %> %>
                                <%# <% end %> %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="col-xs-offset-1 col-xs-3">
        <table class="table mt-3row">
            <tr>
                <th>商品合計</th>
                <th><%= @order_price.subtotal %>円</th>
            </tr>
            <tr>
                <th>送料</th>
                <th><%= @order.postage %>円</th>
            </tr>
            <tr>
                <th>請求金額合計</th>
                <th><%= @order.total_fee %>円</th>
            </tr>
        </table>
    </div>
</div>