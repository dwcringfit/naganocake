<% content_for(:title, '管理者ログイン') %>
<div class="row">
  <div class="col-xs-4 col-xs-offset-2"><h3>管理者ログイン</h3></div>
</div>
<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= render "layouts/flash" %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "control-label col-xs-4" %>
      <div class="col-xs-4">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード", class: "control-label col-xs-4" %>
      <div class="col-xs-4">
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary col-xs-4 col-xs-offset-4" %>
    </div>
  <% end %>
</div>
