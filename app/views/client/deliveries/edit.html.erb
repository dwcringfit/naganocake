<div class="row">
    <h2>配送先編集</h2>
</div>

<div class="row">
    <%= form_for(@delivery) do |f| %>
    <%= render "layouts/error_messages", model: f.object %>

    <div class="form-group">
        <%= f.label :"郵便番号ハイフンなし", class: "col-sm-2"  %>
        <%= f.text_field :post_number, class: "col"  %>
    </div>

    <div class="form-group">
        <%= f.label :"住所", class: "col-sm-2"  %>
        <%= f.text_field :address, class: "col"  %>
    </div>

    <div class="form-group">
        <%= f.label :"宛名", class: "col-sm-2"  %>
        <%= f.text_field :receiver, class: "col" %>
    </div>

    <div class="row">
        <%= f.submit "編集する", class: "btn btn-primary" %>
    </div>
    <% end %>
</div>