<div class="row">
    <h2>配送先登録／一覧<h2>
</div>

<div class="row">
    <%= form_for(@delivery) do |f| %>
    <div class="from-group row">
        <%= f.label :郵便番号ハイフンなし , class: "col-sm-2" %>
        <%= f.text_field :post_number, class: "form-control" %>
    </div>

    <div class="from-group row">
        <%= f.label :住所 , class: "col-sm-2" %>
        <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="from-group row">
        <%= f.label :宛名 , class: "col-sm-2" %>
        <%= f.text_field :receiver, class: "form-control" %>
    </div>
    <% end %>

    <table class="row table table-bordered">
        <thead>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @deliveries.each do |delivery| %>
            <tr>
                <td><%= deliverie.post_number %></td>
                <td><%= deliverie.address %></td>
                <td><%= deliverie.receiver %></td>
                <td>
                    <%= link_to "編集する", edit_delivery_path(deliverie),class: "btn btn-primary" %>
                    <%= link_to "削除する", delivery_path(deliverie),method: delete ,date:{confirm: '本当に削除しますか？'}, class: "btn btn-danger" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>