<div class="row">
    <h2>配送先登録／一覧<h2>
</div>

<div class="row">
    <%= form_for(@delivery_new) do |f| %>
    <div class="form-group row">
        <%= f.label :郵便番号ハイフンなし , class: "col-sm-2" %>
        <%= f.text_field :post_number, class: "col" %>
    </div>

    <div class="form-group row">
        <%= f.label :住所 , class: "col-sm-2" %>
        <%= f.text_field :address, class: "col" %>
    </div>

    <div class="form-group row">
        <%= f.label :宛名 , class: "col-sm-2" %>
        <%= f.text_field :receiver, class: "col" %>
    </div>
    <div class="row">
        <%= f.submit "登録する", class: "btn btn-primary" %>
    </div>
    <% end %>
</div>

<div class="row">
    <table class="row table table-bordered">
        <thead>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @deliveries.each do |delivery| %>
            <tr>
                <td><%= delivery.post_number %></td>
                <td><%= delivery.address %></td>
                <td><%= delivery.receiver %></td>
                <td>
                    <%= link_to "編集する", edit_delivery_path(delivery), class: "btn btn-primary" %>
                    <%= link_to "削除する", delivery_path(delivery), method: :delete ,data: { confirm: '本当に削除しますか?' }, class: "btn btn-danger" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>