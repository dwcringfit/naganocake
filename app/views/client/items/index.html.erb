
<div class="row">
	<div class="col-xs-4">
			<table class="table table-hover table-bordered table-inverse">
				<thead>
					<th><h4>ジャンル検索</h4></th>
				</thead>
				<tbody>
					<td><%= link_to "全て表示",items_path, method: :get %></td>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= link_to genre.name, items_path(genre_id: genre.id), method: :get %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		<!--ジャンル検索窓を表示する -->
    </div>

	<div class="col-xs-8">
		<% if @genre %>
		 <h2>ジャンル一覧</h2>
        <% else %>
		 <h2>商品一覧</h2>
        <% end %>
		<!--商品の一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% if @items %>
				<% @items.each do |item| %>
				<tr>
					<td>
						<%= link_to(item) do %>
						<%= attachment_image_tag(item, :image, format: 'jpeg', size: '150x150', fallback: "no_image.jpg") %>
						<% end %>
					</td>
					<td><%= link_to item.name, item, class: "item_#{item.id}" %></td>
					<td><%= item.price %></td>
					<td><%= item.is_sale ? "販売中" : "売り切れ" %>
				</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>


	</div>
</div>