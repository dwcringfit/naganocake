<div class="row">
	<div class="col-xs-4">
		<div class = "genre-margin">
		   <%= render 'layouts/genre_search', genres: @genres %>
		   <!--ジャンル検索窓を表示する -->
		</div>
	</div>

	<div class="col-xs-8">
		<% if @genre %>
		 <h2>ジャンル一覧</h2><br> <!-- ジャンル検索にて、ジャンル名を押されたら表示 -->
        <% else %>
		 <h2>商品一覧</h2><br> <!-- ジャンル検索されていない、または全て表示を押した時 -->
        <% end %>

		<!--商品の一覧 -->
		<% if @items %>
			<% @items.each do |item| %>
				<ul>
					<li>
						<%= link_to(item) do %>
						<%= attachment_image_tag(item, :image, format: 'jpeg', size: '200x200', fallback: "no_image.jpg") %>
						<% end %>
					</li>
					<li><%= link_to item.name, item, class: "item_#{item.id}" %></li>
					<li><%= item.price %>  円</li>
					<li><%= item.is_sale ? "販売中" : "売り切れ" %></li>
				</ul>
			<% end %>
		<% end %>


	</div>
</div>