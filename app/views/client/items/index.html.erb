
<div class="row">
	<div class="col-xs-3">

		<h2>ジャンル検索</h2>
			<table class="table table-hover table-inverse">
				<tbody>
					<tr>
						<td>
							<% @genres.each do |genre| %>
							<%= link_to genre.name, items_path, method: :get, genre_id: genre.id %>
							<% end %>
						</td>
					</tr>
				</tbody>
		<!--ジャンル検索窓を表示する -->

	</div>

	<div class="col-xs-9">
		<h2>商品一覧</h2>
		<!--商品の一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th></th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% if @items %>
				<% @items.each do |item| %>
				<tr>
					<td>
						<%= link_to(item) do %>
						<%= attachment_image_tag(item, :image, format: 'jpeg', size: '500x500', fallback: "no-image.jpg") %>
						<% end %>
					</td>
					<td><%= link_to item.name, item, class: "item_#{item.id}" %></td>
					<td><%= item.price %></td>
					<td><%= item.is_sale ? "販売中" : "売り切れ" %>
				</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>


	</div>
</div>