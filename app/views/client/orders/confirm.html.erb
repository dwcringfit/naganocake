<div class="row">
    <div class="col-xs-offset-1">
        <h2 class="col-xs-4">注文情報確認</h2>
    </div>
</div>

<div class="row">
    <table class="table">
        <thead>
            <tr class="active">
                <th class="text-center">>商品名</th>
                <th class="text-center">単価（税込）</th>
                <th class="text-center">数量</th>
                <th class="text-center">小計</th>
            </tr>
        </thead>
        <tbody>
            <% current_client.cart_items.each do |cart_item| %>
            <tr>
                <td class="text-right"><%= cart_item.item.name %></td>
                <td class="text-right"><%= cart_item.price_tax_included %></td>
                <td class="text-right"><%= cart_item.item_count %></td>
                <td class="text-right"><%= cart_item.subtotal %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>