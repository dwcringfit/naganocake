<div class="row">
    <div class="col-xs-offset-1">
        <h3 class="order-text col-xs-4">注文履歴一覧</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-offset-1 col-xs10">
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="active">
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                </tr>
            </thead>
            <tbody>
                <% if @orders.any? %>
                    <% @orders.each do |order| %>
                        <tr>
                            <td><%= l order.created_at %></td>
                            <td><%= order.all_shipping_info %></td>
                            <td><%= order.items.name %></td>
                            <td><%= order.total_fee %></td>
                            <td><%= order.status %></td>
                            <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>