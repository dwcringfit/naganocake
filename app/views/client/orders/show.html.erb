<div class="row">
    <div class="col-xs-offset-1">
        <h3 class="order-text col-xs-4">注文履歴詳細</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-offset-1 col-xs-5">
        <p>注文情報</p>
        <table class="table table-hover">
            <tr>
                <th class="table-active">注文日</th>
                </td><%= @order.created_today %></td>
            </tr>
            <tr>
                <th class="table-active">配送先</th>
                </td><%= @order.address %></td>
            </tr><tr>
                <th class="table-active">支払方法</th>
                </td><%= @order.payment_method %></td>
            </tr><tr>
                <th class="table-active">ステータス</th>
                </td><%= @order.status %></td>
            </tr>
        </table>
    </div>
    <div class="col-xs-offset-1 col-xs-3">
        <p>請求情報</p>
        <table class="table table-hover">
            <tr>
                <th class="table-active">商品合計</th>
                </td><%= @order.total_fee %></td>
            </tr>
            <tr>
                <th class="table-active">配送料</th>
                </td><%= @order.postage %></td>
            </tr>
            <tr>
                <th class="table-active">ご請求額</th>
                </td><%= @order.fee_including_postage %></td>
            </tr>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-xs-offset-1 col-xs-6">
        <p>注文内容</p>
        <table class="table table-hover">
            <thead>
                <tr class="table-active">
                    <th class="col-xs-5">商品</th>
                    <th class="col-xs-3">単価（税込）</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
            </thead>
            <tbody>
                <% @order.order_item.each do |order| %>
                    <tr>
                        <td><%= order.item.neme %></td>
                        <td><%= order.order_item.price %></td>
                        <td><%= order.order_item.item_count %></td>
                        <td><%= order.subtotal %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>