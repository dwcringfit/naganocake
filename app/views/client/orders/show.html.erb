<div class="row">
    <div class="col-xs-offset-1">
        <h3 class="order-text col-xs-3">注文履歴詳細</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-offset-1 col-xs-5">
        <table class="table table-hover table-bordered">
            <h3>注文情報</h3>
            <tr>
                <th class="active">注文日</th>
                <td><%= l @order.created_at, format: :short %></td>
            </tr>
            <tr>
                <th class="active">配送先</th>
                <td><%= @order.all_shipping_info %></td>
            </tr>
            <tr>
                <th class="active">支払方法</th>
                <td><%= @order.payment_method %></td>
            </tr>
            <tr>
                <th class="active">ステータス</th>
                <td><%= @order.status_i18n %></td>
            </tr>
        </table>
    </div>
    <div class="col-xs-offset-1 col-xs-3">
        <h3>請求情報</h3>
        <table class="table table-hover table-bordered">
            <tr>
                <th class="active">商品合計</th>
                <td><%= @order.sub_total %></td>
            </tr>
            <tr>
                <th class="active">配送料</th>
                <td><%= @order.postage %></td>
            </tr>
            <tr>
                <th class="active">ご請求額</th>
                <td><%= @order.total_fee %></td>
            </tr>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-xs-offset-1 col-xs-6">
        <h3>注文内容</h3>
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="active">
                    <th class="col-xs-5">商品</th>
                    <th class="col-xs-3">単価（税込）</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
            </thead>
            <tbody>
                <% @order_items.each do |order| %>
                    <tr>
                        <td><%= order.item.name %></td>
                        <td><%= order.price %></td>
                        <td><%= order.item_count %></td>
                        <td><%= order.subtotal %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>