<% content_for(:title, 'パスワード再設定') %>
<div class="row">
  <div class="col-xs-4 col-xs-offset-2"><h3>パスワード再設定</h3></div>
</div>
<div class="row">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= render "layouts/error_messages", model: resource %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "control-label col-xs-4" %>
      <div class="col-xs-4">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "送信", class: "btn btn-primary col-xs-3 col-xs-offset-4" %>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <%= link_to "ログインはこちら", new_client_session_path %>
    <span>|</span>
    <%= link_to "新規登録はこちら", new_client_registration_path %>
  </div>
</div>